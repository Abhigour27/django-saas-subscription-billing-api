# ─── Django ───────────────────────────────────────────────────────────────────
SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_SETTINGS_MODULE=config.settings.development
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
FRONTEND_URL=http://localhost:3000

# ─── Database ─────────────────────────────────────────────────────────────────
# Leave blank for local SQLite (development)
# For production: postgresql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=

# ─── Redis / Celery ───────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── Stripe ───────────────────────────────────────────────────────────────────
# Get these from https://dashboard.stripe.com/apikeys (use test keys for dev)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
# Get this from https://dashboard.stripe.com/webhooks after setting up the endpoint
STRIPE_WEBHOOK_SECRET=whsec_...

# ─── Email (SMTP) ─────────────────────────────────────────────────────────────
# For development, emails are printed to console (EMAIL_BACKEND override in dev settings)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yoursaasapp.com

# ─── CORS (Production only) ───────────────────────────────────────────────────
CORS_ALLOWED_ORIGINS=https://yoursaasapp.com,https://www.yoursaasapp.com
